<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.marcos.kathleenmarcosapp.Controle.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textFabricante"
            android:id="@+id/textViewFabricante"
            android:textSize="@dimen/TamanhoMedio" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerFabricante"
            android:entries="@array/SpinnerFabricante"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textModelo"
            android:id="@+id/textViewModelo"
            android:textSize="@dimen/TamanhoMedio" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerModelo"
            android:entries="@array/SpinnerModelo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textCIdade"
            android:id="@+id/textViewCidade"
            android:textSize="@dimen/TamanhoMedio" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCidade"
            android:entries="@array/SpinnerCidade"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonOK"
            android:id="@+id/button"
            android:onClick="consultarVeiculos"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</RelativeLayout>
